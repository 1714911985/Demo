<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_notification"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        app:title="通知" />

    <Button
        android:id="@+id/btn_ordinary_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通通知" />

    <Button
        android:id="@+id/btn_jump_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击后跳转的通知" />

    <Button
        android:id="@+id/btn_big_text_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="超长内容的通知" />

    <Button
        android:id="@+id/btn_image_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="放了张图片的通知" />

    <Button
        android:id="@+id/btn_important_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重要通知" />
</LinearLayout>
