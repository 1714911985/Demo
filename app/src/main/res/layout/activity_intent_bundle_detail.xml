<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.first.activity.IntentBundleDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_intent_bundle_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Intent&amp;数值传递" />

    <Button
        android:id="@+id/btn_intent_explicit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显式Intent传递各种类型数值"
        app:layout_constraintTop_toBottomOf="@id/tb_intent_bundle_detail" />

    <Button
        android:id="@+id/btn_intent_implicit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐式Intent传递各种类型数值"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_explicit" />

    <Button
        android:id="@+id/btn_implicit_intent_open_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐式Intent的应用：打开拨号"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_implicit" />

    <Button
        android:id="@+id/btn_back_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent返回数据给上一个Activity"
        app:layout_constraintTop_toBottomOf="@id/btn_implicit_intent_open_phone" />

    <Button
        android:id="@+id/btn_bundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bundle传递数据"
        app:layout_constraintTop_toBottomOf="@id/btn_back_data" />

    <Button
        android:id="@+id/btn_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="传递值的临界值｜超出限制报出异常｜优化方法"
        app:layout_constraintTop_toBottomOf="@id/btn_bundle" />
</androidx.constraintlayout.widget.ConstraintLayout>