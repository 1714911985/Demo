<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.first.ui.MyViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="继承View的自定义控件"/>

    <com.example.demo.utils.myview.CircleImage
        android:layout_width="223dp"
        android:layout_height="223dp"
        android:layout_gravity="center"
        app:bgcolor="@color/purple"
        app:size="60"
        app:text="aaaaaaaaa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="继承ViewGroup的自定义控件"/>

    <com.example.demo.utils.myview.VerticalLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:padding="16dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.example.demo.utils.myview.VerticalLinearLayout>
</LinearLayout>