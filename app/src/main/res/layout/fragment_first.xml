<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Activity"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_what_is_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="什么是Activity？" />

            <Button
                android:id="@+id/btn_how_to_create_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity的创建" />

            <Button
                android:id="@+id/btn_intent_bundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="intent&amp;数据传递" />

            <Button
                android:id="@+id/btn_activity_life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity生命周期" />

            <Button
                android:id="@+id/btn_launch_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity启动模式" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="UI组件"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_first_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第一类UI组件" />

            <Button
                android:id="@+id/btn_second_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第二类UI组件" />

            <Button
                android:id="@+id/btn_third_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第三类UI组件" />

            <Button
                android:id="@+id/btn_fourth_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第四类UI组件" />

            <Button
                android:id="@+id/btn_my_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义UI控件" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>